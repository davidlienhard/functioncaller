{
    "name": "davidlienhard/functioncaller",
    "license": "proprietary",
    "description": "üêò php library to call functions and ctahc triggered errors",
    "keywords": [ "errorhandler", "php", "library" ],
    "type": "libary",
    "homepage": "https://github.com/davidlienhard/functioncaller/",
    "authors": [
        {
            "name": "David Lienhard",
            "email": "david.lienhard@tourasia.ch",
            "homepage": "http://www.tourasia.ch/",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/davidlienhard/functioncaller/issues/",
        "email": "david.lienhard@tourasia.ch"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.tourbase.ch"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3",
        "phpstan/phpstan": "^0",
        "slevomat/coding-standard": "^6.4"
    },
    "autoload": {
        "classmap": [
            "src/"
        ]
    },
    "scripts": {
        "phpcs": "./vendor/bin/phpcs",
        "phpstan": "./vendor/bin/phpstan analyse",
        "test": [
            "@phpcs",
            "@phpstan"
        ],
        "phpdoc": "docker run --rm -v ${PWD}:/data phpdoc/phpdoc:3 run",
        "doc": [
            "@phpdoc"
        ]
    }
}
